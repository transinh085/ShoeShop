@using ShoeShop.ViewModels.Authentication;
@model ResetPasswordViewModel;
@{
	ViewData["Title"] = "Reset Password";
}

@section Styles {
	<link href="~/css/account.css" rel="stylesheet">
}

<main class="bg_gray">

	<div class="container margin_60">
		<div class="page_header">
			<h1 class="text-center">Reset Password</h1>
		</div>
		<!-- /page_header -->
		<div class="row justify-content-center">
			<div class="col-xl-6 col-lg-6 col-md-8">
				<div class="box_account">
					<form class="form_container" asp-controller="Authentication" asp-action="ResetPassword" method="post" role="form">
						@if (TempData["Error"] != null)
						{
							<div class="col-md-12 alert alert-danger mt-3">
								<span><b>Sorry!</b> - @TempData["Error"]</span>
							</div>
						}
						<input asp-for="Code" hidden />
						<div class="form-group">
							<label asp-for="Email" class="form-label"></label>
							<input asp-for="Email" class="form-control mb-1" placeholder="abc@email.com">
							<span asp-validation-for="Email" class="d-block text-danger mt-1"></span>
						</div>
						<div class="form-group">
							<label asp-for="Password" class="form-label"></label>
							<input asp-for="Password" class="form-control mb-1" placeholder="Enter new password">
							<span asp-validation-for="Password" class="d-block text-danger mt-1"></span>
						</div>
						<div class="form-group">
							<label asp-for="ConfirmPassword" class="form-label"></label>
							<input asp-for="ConfirmPassword" class="form-control mb-1" placeholder="Enter new password">
							<span asp-validation-for="ConfirmPassword" class="d-block text-danger mt-1"></span>
						</div>
						<div class="text-center"><input type="submit" value="Change Password" class="btn_1 full-width"></div>
					</form>
					<!-- /form_container -->
				</div>
				<!-- /row -->
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</main>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
