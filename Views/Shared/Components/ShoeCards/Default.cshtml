@model Product;
<div class="col-6 col-md-4">
	<div class="grid_item">
@* 	<span class="ribbon off">-30%</span> *@
	<figure>
			<a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">
				<img class="img-fluid" src="~/img/products/@Model.Thumbnail.Name" alt="">
			</a>
	</figure>
		<a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">
			<h3>@Model.Name</h3>
		</a>
	<div class="price_box">
			<span class="new_price">$@Model.Price.ToString("0.00")</span>
			@* <span class="old_price">$@Model.OldPrice.ToString("0.00")</span> *@
	</div>
	</div>
</div>