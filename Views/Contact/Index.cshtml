@model ShoeShop.Models.Contact
@{
	ViewData["Title"] = "Contact";
}

@section Styles {
	<link href="~/css/contact.css" rel="stylesheet">
	<link rel="stylesheet" href="~/admin/js/plugins/sweetalert2/sweetalert2.min.css">
}


<main class="bg_gray">
	<div class="container margin_60">
		<div class="main_title">
			<h2>Contact Allaia</h2>
			<p>
				Euismod phasellus ac lectus fusce parturient cubilia a nisi blandit sem cras nec tempor
				adipiscing rcu ullamcorper ligula.
			</p>
		</div>
		<div class="row justify-content-center">
			<div class="col-lg-4">
				<div class="box_contacts">
					<i class="ti-support"></i>
					<h2>Allaia Help Center</h2>
					<a href="#0">+94 423-23-221</a> - <a href="#0">help@allaia.com</a>
					<small>MON to FRI 9am-6pm SAT 9am-2pm</small>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="box_contacts">
					<i class="ti-map-alt"></i>
					<h2>Allaia Showroom</h2>
					<div>6th Forrest Ray, London - 10001 UK</div>
					<small>MON to FRI 9am-6pm SAT 9am-2pm</small>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="box_contacts">
					<i class="ti-package"></i>
					<h2>Allaia Orders</h2>
					<a href="#0">+94 423-23-221</a> - <a href="#0">order@allaia.com</a>
					<small>MON to FRI 9am-6pm SAT 9am-2pm</small>
				</div>
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
	<div class="bg_white">
		<div class="container margin_60_35">
			<h4 class="pb-3">Drop Us a Line</h4>
			<div class="row">
				<div class="col-lg-4 col-md-6 add_bottom_25">
					<form asp-controller="Contact" asp-action="SubmitContact" method="post">
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Name *" asp-for="Name">
							<span asp-validation-for="Name"></span>
						</div>
						<div class="form-group">
							<input class="form-control" type="email" placeholder="Email *" asp-for="Email">
							<span asp-validation-for="Email"></span>
						</div>
						<div class="form-group">
							<textarea class="form-control" style="height: 150px;" placeholder="Message *" asp-for="Message"></textarea>
							<span asp-validation-for="Message"></span>
						</div>
						<div class="form-group">
							<input class="btn_1 full-width" type="submit" value="Submit">
						</div>
					</form>

				</div>
				<div class="col-lg-8 col-md-6 add_bottom_25">
					<iframe class="map_contact"
							src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.669726976184!2d106.67968337488229!3d10.759917089387843!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f1b7c3ed289%3A0xa06651894598e488!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBTw6BpIEfDsm4!5e0!3m2!1svi!2s!4v1699978803851!5m2!1svi!2s"
							style="border: 0" allowfullscreen></iframe>
				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /bg_white -->
</main>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}



