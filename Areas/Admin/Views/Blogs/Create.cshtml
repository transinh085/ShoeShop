@model ShoeShop.Models.Blog;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/admin/js/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/admin/js/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/admin/js/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/admin/js/plugins/jquery-validation/additional-methods.js"></script>
    <script>Dashmix.helpersOnLoad(['jq-select2', 'js-ckeditor']);</script>
    <script src="~/admin/js/blog/add-blog.js"></script>
}

<h1>Create</h1>

<h4>Blog</h4>
<hr />
<div class="row" style="align-items:center;">
    <div class="col-md-4">
        <form asp-action="Create" id="blog-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-4" >
                <label class="form-label" for="upload-image">Thumbnail</label>
                <div class="upload-image-container" style="width:600px; height:400px">
                    <input type="file" id="upload-image" name="upload-image" class="upload-image-input" hidden multiple />
                    <div class="no-image">
                        <p>Select files to upload</p>
                    </div>
                    <div class="has-image" style="margin: 0">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="blog-name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control" id="blog-slug" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label" for="topic-id">Topic</label>
                <select class="js-select2 form-select" id="topic-id" name="topic-id" style="width: 100%;" data-placeholder="Choose topic..">
                    <option></option>
                    @foreach (var topic in ViewBag.Topics)
                    {
                        <option value="@topic.Id">@topic.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <div class="mb-4">
                    <label class="form-label">Content</label>
                    <textarea id="js-ckeditor" name="blog-content" width="100px"></textarea>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" id="btn-add-blog" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


